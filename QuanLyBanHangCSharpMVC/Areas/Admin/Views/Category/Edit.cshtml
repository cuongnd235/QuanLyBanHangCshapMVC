
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Models.EntityFrameworkCore
@model Category

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Sửa danh mục
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class=""></i>
                @Html.ActionLink("Danh mục", "Index")
            </li>
            <li class="active" style="margin-left: 20px;">
                <i class="fa fa-file"></i> Sửa danh mục
            </li>
        </ol>
        <div class="clearfix"></div>

    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @for = "inputEmail3", @class = "col-sm-2 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Tên danh mục", Value = Model.Name })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success col-sm-2" name="btnSua">Sửa</button>
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger col-sm-2" })
                </div>
            </div>
        }
    </div>
</div>