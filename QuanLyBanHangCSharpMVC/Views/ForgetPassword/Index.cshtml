
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JsSection {
    <script type="text/javascript">
        $(document).ready(function() {
            if('@TempData["ResetPassword"]')
            {
                toastr.error('@TempData["ResetPassword"]');
                @{ TempData["ResetPassword"] = ""; }
            }
        });
    </script>
}

<div class="container">
    <div class="account">
        <h1>Quên mật khẩu</h1>
        <div class="account-pass">
            <div class="col-sm-2"></div>
            <div class="col-sm-8 account-top">
                @using (Html.BeginForm("Index", "ForgetPassword", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", "error")
                    <div>
                        <span>Email</span>
                        @Html.TextBox("Email", "", new { placeholder = "Email", required = "required" })
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 150px;">Quên mật khẩu</button>
                    <a href="@Url.Action("Index", "Login")" class="btn btn-success" style="width: 150px;">Đăng nhập</a>
                    <a href="@Url.Action("Index", "Register")" class="btn btn-warning" style="width: 150px;">Đăng ký</a>
                }
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>